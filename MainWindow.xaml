<Window x:Class="begunBezikov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:begunBezikov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" ></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Height="80" VerticalAlignment="Top" Content="Я хочу стать бегуном" Click="Button_Click"></Button>
        <Rectangle Grid.ColumnSpan="2" Fill="Gray"></Rectangle>
        <Rectangle Grid.ColumnSpan="2" Fill="Gray" Grid.Row="2"></Rectangle>
        <TextBlock Grid.ColumnSpan="2" Text="MARATHON SKILLS 2016" HorizontalAlignment="Center" Margin="20" FontSize="36" Foreground="White" FontWeight="Medium"></TextBlock>
        
    </Grid>
</Window>
